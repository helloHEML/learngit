<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.rongke.mapper.GoodsMapper">    <resultMap type="com.rongke.model.Goods" id="rmGoods">        <id property="id" column="id" />        <result property="name" column="name"/>        <result property="picUrl" column="picUrl"/>        <result property="initialPrice" column="initialPrice"/>        <result property="recyclingNum" column="recyclingNum"/>        <result property="classifyId" column="classifyId"/>        <result property="gmtDatetime" column="gmtDatetime"/>        <result property="uptDatetime" column="uptDatetime"/>        <association property="classify" javaType="com.rongke.model.Classify" >            <id property="id" column="classify_id" />        </association>    </resultMap>    <resultMap type="com.rongke.model.Goods" id="mGoods">        <id property="id" column="goods_id" />        <result property="name" column="goods_name"/>        <result property="picUrl" column="goods_picUrl"/>        <result property="initialPrice" column="goods_initialPrice"/>        <result property="recyclingNum" column="goods_recyclingNum"/>        <result property="classifyId" column="goods_classifyId"/>        <result property="gmtDatetime" column="goods_gmtDatetime"/>        <result property="uptDatetime" column="goods_uptDatetime"/>    </resultMap>    <resultMap id="mGoodsImpl" type="com.rongke.model.Goods" extends="mGoods">        <association property="classify" javaType="com.rongke.model.Classify" >            <id property="name" column="classify_name" />        </association>    </resultMap>    <sql id="mGoodsPkSql">        goods.id AS goods_id,        goods.name AS goods_name,        goods.pic_url AS goods_picUrl,        goods.initial_price AS goods_initialPrice,        goods.recycling_num AS goods_recyclingNum,        goods.classify_id AS goods_classifyId,        goods.gmt_datetime AS goods_gmtDatetime,        goods.upt_datetime AS goods_uptDatetime    </sql>    <sql id="mGoodsSql">        id AS id,        name AS name,        pic_url AS picUrl,        initial_price AS initialPrice,        recycling_num AS recyclingNum,        classify_id AS classifyId,        gmt_datetime AS gmtDatetime,        upt_datetime AS uptDatetime    </sql>    <select id="selectGoodsPage" parameterType="java.lang.String" resultMap="mGoodsImpl">        SELECT         <include refid="mGoodsPkSql"></include>         ,        classify.name AS classify_name        FROM        classify ,goods        WHERE        goods.classify_id=classify.id        <if test="classifyId != null and classifyId !=''">           AND classify.id=#{classifyId}        </if>        <if test="goodsId != null and goodsId !=''">            AND goods.id=#{goodsId}        </if>        order by goods.id        <if test="_parameter.containsKey('startIndex')">            limit #{startIndex},#{size}        </if>    </select>    <select id="selectGoodsPageSize" parameterType="java.lang.String" resultType="java.lang.Integer">        SELECT         COUNT(1)        FROM        classify ,goods        WHERE        goods.classify_id=classify.id        <if test="classifyId != null and classifyId !=''">            AND classify.id=#{classifyId}        </if>        <if test="goodsId != null and goodsId !=''">            AND goods.id=#{goodsId}        </if>    </select>    </mapper>