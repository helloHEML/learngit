<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.rongke.mapper.CouponMapper">    <resultMap type="com.rongke.model.Coupon" id="rmCoupon">        <id property="id" column="id" />        <result property="type" column="type"/>        <result property="limitPrice" column="limitPrice"/>        <result property="price" column="price"/>        <result property="status" column="status"/>        <result property="validityDay" column="validityDay"/>    </resultMap>    <resultMap type="com.rongke.model.Coupon" id="mCoupon">        <id property="id" column="coupon_id" />        <result property="type" column="coupon_type"/>        <result property="limitPrice" column="coupon_limitPrice"/>        <result property="price" column="coupon_price"/>        <result property="status" column="coupon_status"/>        <result property="validityDay" column="coupon_validityDay"/>    </resultMap>    <sql id="mCouponPkSql">        coupon.id AS coupon_id,        coupon.type AS coupon_type,        coupon.limit_price AS coupon_limitPrice,        coupon.price AS coupon_price,        coupon.status AS coupon_status,        coupon.validity_day AS coupon_validityDay    </sql>    <sql id="mCouponSql">        id AS id,        type AS type,        limit_price AS limitPrice,        price AS price,        status AS status,        validity_day AS validityDay    </sql>    <select id="selectByCondition" parameterType="Coupon" resultMap="rmCoupon">    select    <include refid="mCouponSql"></include>    from coupon    <where>        <if test="id!= null">            AND id=#{id}        </if>        <if test="type!= null">            AND type=#{type}        </if>        <if test="limitPrice!= null">            AND limit_price=#{limitPrice}        </if>        <if test="price!= null">            AND price=#{price}        </if>        <if test="validityDay!= null">            AND validity_day=#{validityDay}        </if>    </where>    </select>    </mapper>